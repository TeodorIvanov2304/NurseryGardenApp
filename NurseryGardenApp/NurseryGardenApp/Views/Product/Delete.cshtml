@using NurseryGardenApp.ViewModels.Product;
@model DeleteProductViewModel;

<div class="container mt-4">
	<h2>Delete Product</h2>
	@Html.AntiForgeryToken()
	<div class="card">
		<img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name">
		<div class="card-body">
			<h5 class="card-title">@Model.Name</h5>
			<p class="card-text">@Model.Description</p>
			<p><strong>Price:</strong> $@Model.Price</p>
			<p><strong>Category:</strong> @Model.CategoryName</p>
			@if (!string.IsNullOrEmpty(Model.DiscountName))
			{
				<p><strong>Discount:</strong> @Model.DiscountName</p>
			}
		</div>
	</div>
	<form asp-action="DeleteConfirmed" method="post">
		<input type="hidden" name="Id" value="@Model.Id" />
		<p>Are you sure you want to delete this product?</p>
		<button type="submit" class="btn btn-danger">Delete</button>
		<a asp-action="Index" class="btn btn-secondary">Cancel</a>
	</form>
</div>
