<div class="container mt-5">
	<div class="text-center">
		<h1 class="display-4 mb-4 text-primary">Welcome to the Admin Dashboard</h1>
		<p class="lead mb-5 text-muted">Manage your application using the sections below:</p>
	</div>

	<div class="row g-4">
		<div class="col-md-4">
			<div class="card shadow h-100 border-0">
				<div class="card-body d-flex flex-column align-items-center text-center">
					<i class="fas fa-users fa-3x text-primary mb-3"></i>
					<h5 class="card-title">Manage Users</h5>
					<p class="card-text text-muted">Add, edit, or remove users and assign roles.</p>
					<a asp-area="Admin" asp-controller="UserManagement" asp-action="Index" class="btn btn-primary mt-auto w-100">
						Go to Users
					</a>
				</div>
			</div>
		</div>

		<div class="col-md-4">
			<div class="card shadow h-100 border-0">
				<div class="card-body d-flex flex-column align-items-center text-center">
					<i class="fas fa-box-open fa-3x text-success mb-3"></i>
					<h5 class="card-title">Manage Products</h5>
					<p class="card-text text-muted">Create, update, and delete product entries.</p>					
					<a href="/Product/Manage" class="btn btn-success mt-auto w-100">
						Go to Products
					</a>
				</div>
			</div>
		</div>

		<div class="col-md-4">
			<div class="card shadow h-100 border-0">
				<div class="card-body d-flex flex-column align-items-center text-center">
					<i class="fas fa-tags fa-3x text-warning mb-3"></i>
					<h5 class="card-title">Manage Categories</h5>
					<p class="card-text text-muted">Define and organize product categories.</p>
					<a href="/Category/Manage" class="btn btn-warning mt-auto w-100">
						Go to Categories
					</a>
					@* <a asp-controller="Category" asp-action="Manage" class="btn btn-warning mt-auto w-100">
						Go to Categories
					</a> *@
				</div>
			</div>
		</div>
	</div>
</div>